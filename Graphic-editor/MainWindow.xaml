<Window x:Class="Graphic_editor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graphic_editor"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="800" MinWidth="1200">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition MaxHeight="18px"/>
            <RowDefinition MaxHeight="40px" Height="1.1*"/>
            <RowDefinition Height = "20*"/>
        </Grid.RowDefinitions>
        <Canvas Grid.Row="2"
                Name="PaintingSurface" 
                MouseMove="PaintingSurfaceMouseMove" 
                MouseLeftButtonDown="PaintingSurfaceMouseLeftButtonDown" 
                MouseDown="PaintingSurfaceMouseDown">
            <Canvas.Background>
                <SolidColorBrush Color="White"
                                 Opacity="1"/>
            </Canvas.Background>
        </Canvas>
        <Menu Grid.Row="0" Background="#e4e9fe">
            <MenuItem Header="File"
                      Background="#d6e1ff">
                <MenuItem Header="Save as..."
                          Name="ButtonSaveAs" 
                          Click="ButtonSaveAsClick"
                          Background="#d6e1ff"/>
                <MenuItem Header="Import..."
                          Name="ButtonImportFile" 
                          Click="ButtonImportFileClick"
                          Background="#d6e1ff"/>
            </MenuItem>
            <MenuItem Header="Filters"
                      Background="#d6e1ff">
                <MenuItem Header="Sobel"
                          Name="ButtonSobel"
                          Click="ButtonSobelClick"
                          Background="#d6e1ff"/>
                <MenuItem Header="Matrix"
                          Name="ButtonMatrix"
                          Click="ButtonMatrixClick"
                          Background="#d6e1ff"/>
            </MenuItem>
        </Menu>
        <Grid Grid.Row="1"
              Background="#d6e1ff">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Border Grid.Column="0"
                    CornerRadius="6"
                    Background="#ADC3FF"
                    Margin="4">
                <Border.Effect>
                    <BlurEffect Radius="6"/>
                </Border.Effect>
            </Border>
            <Border Grid.Column="0"
                    Background="#D6E1FF"
                    CornerRadius="5"
                    Margin="5,6">
                <Button Grid.Column="0"
                        Background="Transparent"
                        BorderThickness="0"
                        FontFamily="Segoe UI Symbol"
                        Content=" Brush"
                        Name="ButtonBrush" 
                        Click="ButtonBrushClick"/>
            </Border>
            <Border Grid.Column="1"
                    CornerRadius="6"
                    Background="#ADC3FF"
                    Margin="4">
                <Border.Effect>
                    <BlurEffect Radius="10"/>
                </Border.Effect>
            </Border>
            <Border Grid.Column="1"
                    Background="#D6E1FF"
                    CornerRadius="5"
                    Margin="5,6">
                <Button Grid.Column="0"
                        Background="Transparent"
                        BorderThickness="0"
                        FontFamily="Segoe UI Symbol"
                        Content="⚫ Point"
                        Name="ButtonPoint" 
                        Click="ButtonPointClick"/>
            </Border>
            <Border Grid.Column="2"
                    CornerRadius="6"
                    Background="#ADC3FF"
                    Margin="4">
                <Border.Effect>
                    <BlurEffect Radius="10"/>
                </Border.Effect>
            </Border>
            <Border Grid.Column="2"
                    Background="#D6E1FF"
                    CornerRadius="5"
                    Margin="5,6">
                <Button Grid.Column="0"
                        Background="Transparent"
                        BorderThickness="0"
                        FontFamily="Segoe UI Symbol"
                        Content=" Line"
                        Name="ButtonStraightLine" 
                        Click="ButtonStraightLineClick"/>
            </Border>
            <Border Grid.Column="3"
                    CornerRadius="6"
                    Background="#ADC3FF"
                    Margin="4">
                <Border.Effect>
                    <BlurEffect Radius="10"/>
                </Border.Effect>
            </Border>
            <Border Grid.Column="3"
                    Background="#D6E1FF"
                    CornerRadius="5"
                    Margin="5,6">
                <Button Grid.Column="0"
                        Background="Transparent"
                        BorderThickness="0"
                        FontFamily="Segoe UI Symbol"
                        Content="⧸ Edit lines"
                        Name="ButtonEditStraightLine" 
                        Click="ButtonEditStraightLineClick"/>
            </Border>
            <Border Grid.Column="4"
                    CornerRadius="6"
                    Background="#ADC3FF"
                    Margin="4">
                <Border.Effect>
                    <BlurEffect Radius="10"/>
                </Border.Effect>
            </Border>
            <Border Grid.Column="4"
                    Background="#D6E1FF"
                    CornerRadius="5"
                    Margin="5,6">
                <Button Grid.Column="0"
                        Background="Transparent"
                        BorderThickness="0"
                        FontFamily="Segoe UI Symbol"
                        Content="𐰀 Poly line"
                        Name="ButtonPolyLine" 
                        Click="ButtonPolyLineClick"/>
            </Border>
            <Border Grid.Column="5"
                    CornerRadius="6"
                    Background="#ADC3FF"
                    Margin="4">
                <Border.Effect>
                    <BlurEffect Radius="10"/>
                </Border.Effect>
            </Border>
            <Border Grid.Column="5"
                    Background="#D6E1FF"
                    CornerRadius="5"
                    Margin="5,6">
                <Button Grid.Column="0"
                        Background="Transparent"
                        BorderThickness="0"
                        FontFamily="Segoe UI Symbol"
                        Content="⚪ Circle"
                        Name="ButtonCircle"
                        Click="ButtonCircleClick"/>
            </Border>
            <Border Grid.Column="6"
                    CornerRadius="6"
                    Background="#ADC3FF"
                    Margin="4">
                <Border.Effect>
                    <BlurEffect Radius="10"/>
                </Border.Effect>
            </Border>
            <Border Grid.Column="6"
                    Background="#D6E1FF"
                    CornerRadius="5"
                    Margin="5,6">
                <Button Grid.Column="0"
                        Background="Transparent"
                        BorderThickness="0"
                        FontFamily="Segoe UI Symbol"
                        Content="△ Triangle"
                        Name="ButtonTriangle" 
                        Click="ButtonTriangleClick"/>
            </Border>
            <Border Grid.Column="7"
                    CornerRadius="6"
                    Background="#ADC3FF"
                    Margin="4">
                <Border.Effect>
                    <BlurEffect Radius="10"/>
                </Border.Effect>
            </Border>
            <Border Grid.Column="7"
                    Background="#D6E1FF"
                    CornerRadius="5"
                    Margin="5,6">
                <Button Grid.Column="0"
                        Background="Transparent"
                        BorderThickness="0"
                        FontFamily="Segoe UI Symbol"
                        Content="□ Square"
                        Name="ButtonSquare" 
                        Click="ButtonSquareClick"/>
            </Border>
            <Border Grid.Column="8"
                    CornerRadius="6"
                    Background="#ADC3FF"
                    Margin="4">
                <Border.Effect>
                    <BlurEffect Radius="10"/>
                </Border.Effect>
            </Border>
            <Border Grid.Column="8"
                    Background="#D6E1FF"
                    CornerRadius="5"
                    Margin="5,6">
                <Button Grid.Column="0"
                        Background="Transparent"
                        BorderThickness="0"
                        FontFamily="Segoe UI Symbol"
                        Content="⬠ Pentagon"
                        Name ="ButtonPentagon" 
                        Click="ButtonPentagonClick"/>
            </Border>
            <Border Grid.Column="9"
                    CornerRadius="6"
                    Background="#ADC3FF"
                    Margin="4">
                <Border.Effect>
                    <BlurEffect Radius="10"/>
                </Border.Effect>
            </Border>
            <Border Grid.Column="9"
                    Background="#D6E1FF"
                    CornerRadius="5"
                    Margin="5,6">
                <Button Grid.Column="0"
                        Background="Transparent"
                        BorderThickness="0"
                        FontFamily="Segoe UI Symbol"
                        Content="⬡ Hexagon"
                        Name="ButtonHexagon" 
                        Click="ButtonHexagonClick"/>
            </Border>
            <Border Grid.Column="10"
                    CornerRadius="6"
                    Background="#ADC3FF"
                    Margin="4">
                <Border.Effect>
                    <BlurEffect Radius="10"/>
                </Border.Effect>
            </Border>
            <Border Grid.Column="10"
                    Background="#D6E1FF"
                    CornerRadius="5"
                    Margin="5,6">
                <Button Grid.Column="0"
                        Background="Transparent"
                        BorderThickness="0"
                        FontFamily="Segoe UI Symbol"
                        Content="✰ Star"
                        Name="ButtonStar" 
                        Click="ButtonStarClick"/>
            </Border>
            <Border Grid.Column="11"
                    CornerRadius="6"
                    Background="#ADC3FF"
                    Margin="4">
                <Border.Effect>
                    <BlurEffect Radius="10"/>
                </Border.Effect>
            </Border>
            <Border Grid.Column="11"
                    Background="#D6E1FF"
                    CornerRadius="5"
                    Margin="5,6">
                <Button Grid.Column="0"
                        Background="Transparent"
                        BorderThickness="0"
                        FontFamily="Segoe UI Symbol"
                        Content="➩ Arrow"
                        Name="ButtonArrow" 
                        Click="ButtonArrowClick"/>
            </Border>
            <Border Grid.Column="12"
                    CornerRadius="6"
                    Background="#ADC3FF"
                    Margin="4">
                <Border.Effect>
                    <BlurEffect Radius="10"/>
                </Border.Effect>
            </Border>
            <Border Grid.Column="12"
                    Background="Black"
                    CornerRadius="5"
                    Margin="5,6"
                    Name="BorderColorPicker">
                <Button Grid.Column="0"
                        Background="Transparent"
                        BorderThickness="0"
                        FontFamily="Segoe UI Symbol"
                        Name="ButtonColorPicker"
                        Content="Color"
                        Foreground="White" 
                        Click="ButtonColorPickerClick">
                </Button>
            </Border>
            <Border Grid.Column="13"
                    CornerRadius="6"
                    Background="#ADC3FF"
                    Margin="4">
                <Border.Effect>
                    <BlurEffect Radius="10"/>
                </Border.Effect>
            </Border>
            <Border Grid.Column="13"
                    Background="#D6E1FF"
                    CornerRadius="5"
                    Margin="5,6">
                <Button Background="Transparent"
                        BorderThickness="0"
                        FontFamily="Segoe UI Symbol"
                        Name="ButtonEraser"
                        Content="Eraser"
                        Foreground="Black" 
                        Click="ButtonEraserClick">
                </Button>
            </Border>
        </Grid>
    </Grid>
</Window>
