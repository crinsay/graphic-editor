        <Label Grid.Row="0" 
               Grid.Column="1"
               Grid.ColumnSpan="3"
               Content="Fill boxes"
               FontWeight="Bold"
               FontSize="18"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"/>
