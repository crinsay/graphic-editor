<Window x:Class="Graphic_editor.MatrixFilterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graphic_editor"
        mc:Ignorable="d"
        Title="MatrixFilterWindow" Height="200" Width="200"
        Background="Beige">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" 
               Grid.Column="1"
               Grid.ColumnSpan="3"
               Content="Fill boxes"
               HorizontalContentAlignment="Center"
               VerticalContentAlignment="Center"/>
        <Border Grid.Row="1"
                Grid.Column="1"
                Background="White"
                CornerRadius="5"
                Margin="3">
            <TextBox x:Name="Matrix1" 
                     Text="1"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     BorderThickness="0"
                     Background="Transparent"
                     PreviewTextInput="TextBoxMatrix_PreviewTextInput"
                     MaxLength="3"/>
        </Border>
        <Border Grid.Row="2"
                Grid.Column="1"
                Background="White"
                CornerRadius="5"
                Margin="3">
            <TextBox x:Name="Matrix2" 
                     Text="1"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     BorderThickness="0"
                     Background="Transparent"
                     PreviewTextInput="TextBoxMatrix_PreviewTextInput"
                     MaxLength="3"/>
        </Border>
        <Border Grid.Row="3"
                Grid.Column="1"
                Background="White"
                CornerRadius="5"
                Margin="3">
            <TextBox x:Name="Matrix3" 
                     Text="1"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     BorderThickness="0"
                     Background="Transparent"
                     PreviewTextInput="TextBoxMatrix_PreviewTextInput"
                     MaxLength="3"/>
        </Border>
        <Border Grid.Row="1"
                Grid.Column="2"
                Background="White"
                CornerRadius="5"
                Margin="3">
            <TextBox x:Name="Matrix4" 
                     Text="1"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     BorderThickness="0"
                     Background="Transparent"
                     PreviewTextInput="TextBoxMatrix_PreviewTextInput"
                     MaxLength="3"/>
        </Border>
        <Border Grid.Row="2"
                Grid.Column="2"
                Background="White"
                CornerRadius="5"
                Margin="3">
            <TextBox x:Name="Matrix5" 
                     Text="1"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     BorderThickness="0"
                     Background="Transparent"
                     PreviewTextInput="TextBoxMatrix_PreviewTextInput"
                     MaxLength="3"/>
        </Border>
        <Border Grid.Row="3"
                Grid.Column="2"
                Background="White"
                CornerRadius="5"
                Margin="3">
            <TextBox x:Name="Matrix6" 
                     Text="1"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     BorderThickness="0"
                     Background="Transparent"
                     PreviewTextInput="TextBoxMatrix_PreviewTextInput"
                     MaxLength="3"/>
        </Border>
        <Border Grid.Row="1"
                Grid.Column="3"
                Background="White"
                CornerRadius="5"
                Margin="3">
            <TextBox x:Name="Matrix7" 
                     Text="1"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     BorderThickness="0"
                     Background="Transparent"
                     PreviewTextInput="TextBoxMatrix_PreviewTextInput"
                     MaxLength="3"/>
        </Border>
        <Border Grid.Row="2"
                Grid.Column="3"
                Background="White"
                CornerRadius="5"
                Margin="3">
            <TextBox x:Name="Matrix8" 
                     Text="1"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     BorderThickness="0"
                     Background="Transparent"
                     PreviewTextInput="TextBoxMatrix_PreviewTextInput"
                     MaxLength="3"/>
        </Border>
        <Border Grid.Row="3"
                Grid.Column="3"
                Background="White"
                CornerRadius="5"
                Margin="3">
            <TextBox x:Name="Matrix9" 
                     Text="1"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     BorderThickness="0"
                     Background="Transparent"
                     PreviewTextInput="TextBoxMatrix_PreviewTextInput"
                     MaxLength="3"/>
        </Border>
        <Border Grid.Row="4"
                Grid.Column="2"
                Background="White"
                CornerRadius="5"
                Margin="-10,3">
            <Button x:Name="ButtonApply"
                    Content="Apply"
                    Click="ButtonApplyClick"
                    Background="Transparent"
                    BorderThickness="0"/>
        </Border>
    </Grid>
</Window>
