                Grid.Row="1"
                CornerRadius="6"
                Background="#ADC3FF"
                Opacity="1"
                Margin="3">
            <Border.Effect>
                <BlurEffect Radius="4"/>
            </Border.Effect>
        </Border>
        <Border Grid.Row="1"
                Grid.Column="1"
                Background="#D6E1FF"
                CornerRadius="5"
                Margin="3">
            <TextBox x:Name="Matrix11" 
                     Text="1"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     BorderThickness="0"
                     Background="Transparent"
                     PreviewTextInput="TextBoxMatrix_PreviewTextInput"
