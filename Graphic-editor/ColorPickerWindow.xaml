<Window x:Class="Graphic_editor.ColorPickerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Graphic_editor"
        mc:Ignorable="d"
        Title="ColorPickerWindow" Height="200" Width="300"
        Background="Beige"
        ResizeMode="NoResize"
        >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="0.5*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="5*"/>
            <RowDefinition/>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
            <RowDefinition Height="4*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Grid.Row="1"
               Grid.Column="1"
               Grid.ColumnSpan="5"
               Content="Select color"
               FontSize="18"/>
        <Label Grid.Row="3"
               Grid.Column="1"
               Content="R"/>
        <Label Grid.Row="5"
               Grid.Column="1"
               Content="G"/>
        <Label Grid.Row="7"
               Grid.Column="1"
               Content="B"/>
        <Label Grid.Row="3"
               Grid.Column="3"
               Content="H"/>
        <Label Grid.Row="5"
               Grid.Column="3"
               Content="S"/>
        <Label Grid.Row="7"
               Grid.Column="3"
               Content="V"/>
        <Label Grid.Row="3"
               Grid.Column="5"
               Content="°"/>
        <Label Grid.Row="5"
               Grid.Column="5"
               Content="%"/>
        <Label Grid.Row="7"
               Grid.Column="5"
               Content="%"/>
        <Border Grid.Row="3"
                Grid.Column="2"
                Background="White"
                BorderThickness="0"
                CornerRadius="5">
            <TextBox Name="TextBoxR"
                     Background="Transparent"
                     BorderThickness="0"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     MaxLength="3"
                     PreviewTextInput="TextBoxRGB_PreviewTextInput"
                     Text="{Binding R, UpdateSourceTrigger=PropertyChanged}"/>
        </Border>
        <Border Grid.Row="5"
                Grid.Column="2"
                Background="White"
                BorderThickness="0"
                CornerRadius="5">
            <TextBox Name="TextBoxG"
                     Background="Transparent"
                     BorderThickness="0"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     MaxLength="3"
                     PreviewTextInput="TextBoxRGB_PreviewTextInput"
                     Text="{Binding G, UpdateSourceTrigger=PropertyChanged}"/>
        </Border>
        <Border Grid.Row="7"
                Grid.Column="2"
                Background="White"
                BorderThickness="0"
                CornerRadius="5">
            <TextBox Name="TextBoxB"
                     Background="Transparent"
                     BorderThickness="0"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     MaxLength="3"
                     PreviewTextInput="TextBoxRGB_PreviewTextInput"
                     Text="{Binding B, UpdateSourceTrigger=PropertyChanged}"/>
        </Border>
        <Border Grid.Row="3"
                Grid.Column="4"
                Background="White"
                BorderThickness="0"
                CornerRadius="5">
            <TextBox Name="TextBoxH"
                     Background="Transparent"
                     BorderThickness="0"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     MaxLength="3"
                     IsEnabled="False"/>
        </Border>
        <Border Grid.Row="5"
                Grid.Column="4"
                Background="White"
                BorderThickness="0"
                CornerRadius="5">
            <TextBox Name="TextBoxS"
                     Background="Transparent"
                     BorderThickness="0"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     MaxLength="3"
                     IsEnabled="False"/>
        </Border>
        <Border Grid.Row="7"
                Grid.Column="4"
                Background="White"
                BorderThickness="0"
                CornerRadius="5">
            <TextBox Name="TextBoxV"
                     Background="Transparent"
                     BorderThickness="0"
                     HorizontalContentAlignment="Center"
                     VerticalContentAlignment="Center"
                     MaxLength="3"
                     IsEnabled="False"/>
        </Border>

        <Border Grid.Row="3"
                Grid.Column="7"
                Grid.ColumnSpan="1"
                Grid.RowSpan="5"
                Background="White"
                BorderThickness="0"
                CornerRadius="5"
                Margin="0,10,0,10"
                Name="BorderPickedColor"/>

        <Border Grid.Row="9"
                Grid.Column="2"
                Background="White"
                BorderThickness="0"
                CornerRadius="5">
            <Button Content="OK"
                    Click="ButtonOKClick"
                    Background="Transparent"
                    BorderThickness="0"/>
        </Border>
        <Border Grid.Row="9"
                Grid.Column="4"
                Background="White"
                BorderThickness="0"
                CornerRadius="5">
            <Button Content="Cancel"
                    Click="ButtonCancelClick"
                    Background="Transparent"
                    BorderThickness="0"/>
        </Border>
    </Grid>
</Window>
